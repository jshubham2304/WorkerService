<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Report">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34.1dp"
        android:layout_marginLeft="28.7dp"
        android:layout_marginRight="28.9dp"
        app:cardElevation="1dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@android:color/white">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rect"
            android:padding="12dp">

            <EditText
                android:background="#00000000"
                android:layout_marginStart="10dp"
                android:hint="@string/title_of_issue_or_report"
                android:id="@+id/title"
                android:textColorHint="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34.1dp"
        android:layout_marginLeft="28.7dp"
        android:layout_marginRight="28.9dp"
        app:cardElevation="1dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@android:color/white">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rect"
            android:padding="12dp">

            <TextView
                android:background="#00000000"
                android:layout_marginLeft="10dp"
                android:hint="Select the Issue or Report "
                android:textSize="18sp"
                android:id="@+id/spinner"
                android:textColorHint="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Description"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:background="@drawable/rect"
        android:layout_margin="30dp"
        android:id="@+id/problem"/>
<Button
    android:layout_width="match_parent"
    android:layout_margin="25dp"
    android:layout_gravity="center"
    android:id="@+id/report_btn"
    android:textSize="20dp"
    android:background="@android:color/black"
    android:text="Report to Admin"
    android:textColor="@android:color/white"
    android:layout_height="wrap_content" />
</LinearLayout>

</FrameLayout>