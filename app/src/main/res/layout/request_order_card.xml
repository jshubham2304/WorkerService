<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@android:color/holo_green_light"
        android:layout_width="8dp"
        android:id="@+id/indicator"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lin"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/lin"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:maxLength="200"
            android:text="Issue Services is a decription of repairing the electronices equipment are chutiya ho sab"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="12dp"
            android:id="@+id/date"
            android:text="date"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:text="Confirm"
                android:id="@+id/confirm"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:layout_height="40dp" />
            <Button
                android:id="@+id/detailsofPerson"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:text="Person Details"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/lin"
        android:id="@+id/person_lin"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Person Details"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/name_person"
            android:layout_marginLeft="12dp"
            android:textStyle="bold"
            android:text="Name - Shubham Jain"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/contact_person"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:textStyle="bold"
            android:maxLength="200"
            android:text="Contact : 9024XXXXXX"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/address_person"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:textStyle="bold"
            android:maxLength="200"
            android:text="Address :  House No. 420, chor Bazaar,Delhi"

            />

    </LinearLayout>
</RelativeLayout>

</android.support.design.card.MaterialCardView>